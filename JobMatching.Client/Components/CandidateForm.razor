<EditForm Model="registerCandidateModel">
    <DataAnnotationsValidator />
    <h1 class="h3 mb-3 fw-normal">Please register</h1>

    <div class="input-group-lg">
        <label for="firstName">First name</label>
        <InputText @bind-Value="registerCandidateModel.FirstName"
        id="firstName"
        class="form-control" />
    </div>
    <div class="input-group-lg">
        <label for="lastName">Last name</label>
        <InputText @bind-Value="registerCandidateModel.LastName"
        id="lastName"
        class="form-control" />
    </div>
    <div class="input-group-lg">
        <label for="email">Email</label>
        <InputText @bind-Value="registerCandidateModel.LastName"
        id="email"
        class="form-control" />
    </div>
    <div class="input-group-lg">
        <label for="password">Password</label>
        <InputText @bind-Value="registerCandidateModel.Password"
        id="password"
        class="form-control" />
    </div>
    <div class="input-group-lg">
        <label for="confirmPassword">Password</label>
        <InputText @bind-Value="registerCandidateModel.ConfirmPassword"
        id="confirmPassword"
        class="form-control" />
    </div>
    <button class="btn btn-primary w-100 py-2 mt-4" type="submit">Register</button>
    <button
    @onclick="async () => await OnToggleEventCallback.InvokeAsync()"
    class="btn btn-dark w-100 py-2 mt-2" 
    type="submit">Register employer
    </button>
</EditForm>

@code {
    private RegisterCandidateModel registerCandidateModel = new();

    [Parameter]
    public EventCallback OnToggleEventCallback { get; set; }
}
